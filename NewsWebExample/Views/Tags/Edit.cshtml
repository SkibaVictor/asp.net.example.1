@model NewsWebExample.ViewModels.TagEditViewModel
@{
    ViewData["Title"] = "Edit tag";
}

<form asp-action="Edit" asp-controller="Tags" method="POST" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="File"></label>
        <input type="file" asp-for="File" class="border form-control-file" />
        <span class="text-danger" asp-validation-for="File"></span>
    </div>
    <button class="btn btn-success pl-4 pr-4" type="submit">Save</button>
</form>