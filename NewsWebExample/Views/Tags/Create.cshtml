@model NewsWebExample.ViewModels.TagCreateViewModel
@{
    ViewData["Title"] = "Add tag";
}

@using (Html.BeginForm("Create", "Tags", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "font-weight-bold" })
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label asp-for="File"></label>
        <input type="file" asp-for="File" class="border form-control-file" />
        <span class="text-danger" asp-validation-for="File"></span>
    </div>
    <button class="btn btn-success pl-4 pr-4" type="submit">Save</button>
}

